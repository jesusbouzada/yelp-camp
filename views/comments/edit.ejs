<% include ../partials/header.ejs %>

<div class="container mt-3">
    <div class="d-flex flex-row justify-content-center">
        <div class="col-8 col-md-6 col-lg-5 col-xl-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit Comment</h5>
                    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                        <div class="form-group">
                            <textarea class="form-control" name="comment[text]" cols="30" rows="10"><%= comment.text %></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </form>
                    <a href="/campgrounds/<%= campground_id %>">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>