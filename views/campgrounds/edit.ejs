<% include ../partials/header.ejs %>

<div class="container mt-3">
    <div class="d-flex flex-row justify-content-center">
        <div class="col-8 col-md-6 col-lg-5 col-xl-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit <%= campground.name %></h5>
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="campground[name]" required value="<%= campground.name %>">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                        </div>
                        <div class="form-group">
                            <textarea name="campground[description]" cols="30" rows="10" class="form-control"><%= campground.description %></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>