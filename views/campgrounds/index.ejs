<% include ../partials/header.ejs %>

<div class="container mt-3">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-pick campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 col-lg-4 mt-3">
                <div class="card">                 
                    <img class="card-img-top img-fluid rounded fixHeight" src="<%= campground.image %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name%></h5>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                    </div>        
                </div>
            </div>    
        <% }); %>    
    </div>
</div>

<% include ../partials/footer.ejs %>